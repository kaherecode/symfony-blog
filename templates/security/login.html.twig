{% extends 'base.html.twig' %}
{% block title %}Connecte Toi{% endblock %}
{% block content %}
<div class="container pt-4">
    <div class="row">
        <form method="post" class="col-sm-12 col-md-6 offset-md-3 col-lg-4 offset-lg-4">
        {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        {% if app.user %}
        <div class="mb-3">
            Tu es connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnecte toi</a>
        </div>
        {% endif %}
        <h1 class="h3 mb-3 font-weight-normal">Connecte Toi</h1>
        <div class="form-group">
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
        </div>
        <div class="form-group">
            <label for="inputPassword">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" required>
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Se souvenir de moi
            </label>
        </div>
        <button class="btn btn-lg btn-primary" type="submit">
            Me connecter
        </button>
    </form>
    </div>
</div>
{% endblock %}
